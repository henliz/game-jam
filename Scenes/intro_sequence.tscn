[sub_resource type="GDScript" id="GDScript_skip_gauge"]
script/source = "extends Control

var value := 0.0

func _draw() -> void:
	var center = size / 2.0
	var radius = min(size.x, size.y) / 2.0 - 2.0
	var color = Color(0.6, 0.6, 0.6, 1.0)

	# Draw background circle (outline)
	draw_arc(center, radius, 0, TAU, 32, color, 2.0, true)

	# Draw filled arc based on value
	if value > 0:
		var end_angle = -PI/2 + TAU * value
		draw_arc(center, radius - 4, -PI/2, end_angle, 32, color, 4.0, true)

func set_value(v: float) -> void:
	value = v
	queue_redraw()
"

